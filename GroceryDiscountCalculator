package mygrocerycalcuator;

import java.util.Scanner;

public class MyGroceryCalcuator {

    public static void main(String[] args) {
        //creates scanner
        Scanner scanner = new Scanner(System.in);
        
        //asks for total purchase amount
        System.out.println("\nEnter the total purchase amount: ");
        double amount = scanner.nextInt();
        double finalAmount;
        
        //computes discounts
        if (amount < 1000) {
            System.out.println("Discount applied: No discount applied.");
            System.out.println("Final price after discount: PHP " + amount);
        }
        else if (amount > 1000 && amount <= 5000){
            finalAmount = amount - (amount * 0.05); 
            System.out.println("Discount applied: 5%");
            System.out.println("Final price after discount: PHP " + finalAmount);
        }
        else if (amount > 5000 && amount <= 10000){
            finalAmount = amount - (amount * 0.1); 
            System.out.println("Discount applied: 10%");
            System.out.println("Final price after discount: PHP " + finalAmount);
        }
        else{
            finalAmount = amount - (amount * 0.15); 
            System.out.println("Discount applied: 15%");
            System.out.println("Final price after discount: PHP " + finalAmount);
        }
        scanner.close();
    }
}
